{
    "diagnostic.checkCurrentLine": true,
    "workspace.workspaceFolderCheckCwd": false,
    "coc.preferences.formatOnSaveFiletypes": [
        "json",
        "jsonc",
        "go",
        "tf",
        "terraform"
    ],
    "signature.preferShownAbove": false,
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    // alternative "clangd.path": "/usr/local/Cellar/llvm/12.0.1/bin/clangd",
    "clangd.path": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/clangd",
    "coc.preferences.rootPatterns": [
        "config-ci.json",
        "doc.go",
        "doc_test.go",
        "go.mod",
        ".vim",
        ".git",
        ".hg",
        ".projections.json"
    ],
    "workspace.bottomUpFiletypes": [
        "json",
        "go",
        "gomod",
        "tf",
        "terraform"
    ],
    "go.disable": {
        "workspaceFolders": false
    },
    "go.goplsUseDaemon": true,
    "go.goplsOptions": {
        "staticcheck": true,
        "analyses": {
            "unusedparams": true
        },
        "experimentalWorkspaceModule": false,
        "expandWorkspaceToModule": false,
        "directoryFilters": []
    },
    "go.tags": {
        "transform": "camelcase"
    },
    "go.tests": {
        "generateFlags": [
            "-parallel",
            "-template=testify"
        ]
    },
    "languageserver": {
        "terraform": {
            "command": "terraform-ls",
            "args": [
                "serve"
            ],
            "filetypes": [
                "terraform",
                "tf"
            ],
            "initializationOptions": {},
            "settings": {}
        }
    }
}
